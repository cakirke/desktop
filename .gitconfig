[alias]
    dp = diff --stat
    lp = log --pretty=log
    lpgs = log --pretty=log --graph --stat
[color]
    branch = auto
    diff = auto
    grep = auto
    interactive = auto
    pager = true
    status = auto
    ui = auto
[core]
    autocrlf = input
    editor = vim
    safecrlf = true
[credential]
    helper = osxkeychain
[diff]
    tool = vimdiff
[difftool]
    prompt = false
[merge]
    tool = vimdiff
[mergetool]
    prompt = false
[pretty]
    log = "format:[%C(yellow)%h%Creset] %C(cyan)%ae%Creset, %ar: %s"
[push]
    default = simple
[user]
    email = chris.kirke@gmail.com
    name = Christopher A. Kirke
