-l=132      # Max line width is 132 cols
-i=4        # Indent level is 4 cols
-ci=4       # Continuation indent is 4 cols
-se         # Errors to STDERR
-vt=2       # Maximal vertical tightness
-cti=0      # No extra indentation for closing brackets
-pt=1       # Medium parenthesis tightness
-bt=1       # Medium brace tightness
-sbt=1      # Medium square bracket tightness
-bbt=1      # Medium block brace tightness
-nsfs       # No space before semicolons
-nolq       # Don't outdent long quoted strings
-baao       # Break after operators
-csc        # Add closing comments to blocks
-csci=30    # only add closing comments on blocks longer than 30 lines
-sct        # Stack closing tokens for nested structures
-cab=1      # Break lines at commas after fat commas.
-bar        # Brace always to the right of the opening statement
-dws        # Delete existing whitespace
